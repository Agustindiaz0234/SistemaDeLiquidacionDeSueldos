<VBox alignment="CENTER" prefHeight="400.0" prefWidth="486.0" spacing="10.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.RolDetailController">
    <children>
         <Label text="ID:" />
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <TextField fx:id="txtId" prefWidth="200.0" />
         </children>
      </HBox>
      <Label text="Nombre:" />
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <TextField fx:id="txtNombre" prefWidth="200.0" />
         </children>
      </HBox>
        
        <Button fx:id="btnGuardar" mnemonicParsing="false" onAction="#handleGuardar" text="Guardar" />
    </children>
</VBox>
